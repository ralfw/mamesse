<Window x:Class="mam.steuerung.ui.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartWindow" Height="300" Width="300">
    <DockPanel Margin="20" LastChildFill="False">
        <TextBlock DockPanel.Dock="Top" Text="Aktueller Hilfestatus:" FontWeight="Bold"></TextBlock>
        <TextBlock DockPanel.Dock="Top" Text="{Binding Hilfestatus}"></TextBlock>
        <TextBlock DockPanel.Dock="Top" Text="Aktueller Funktionsstatus:" FontWeight="Bold" Margin="0,20,0,0"></TextBlock>
        <TextBlock DockPanel.Dock="Top" Text="{Binding Funktionsstatus}"></TextBlock>
        <Button DockPanel.Dock="Top"  Command="{Binding HelpCommand}" Margin="0,20,0,0" Height="40">Hilfe anfordern</Button>
    </DockPanel>
</Window>
